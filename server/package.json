{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.1.0",
    "private": true,
    "scripts": {
        "start": "nodemon",
        "build": "rimraf out && tsc --project tsconfig.app.json",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish",
        "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' mocha --config=.mocharc.json --node-env=test",
        "coverage": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' nyc mocha --config=.mocharc.json --node-env=test --exit"
    },
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/index.ts",
            "app/server.ts",
            "app/app.ts"
        ],
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "reporter": [
            "html",
            "text",
            "cobertura"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    },
    "_moduleAliases": {
        "@app": "out/"
    },
    "dependencies": {
        "@typegoose/typegoose": "^10.5.0",
        "@types/mocha": "^9.1.1",
        "@types/multer": "^1.4.11",
        "@types/nodemailer": "^6.4.14",
        "bcryptjs": "^2.4.3",
        "clamscan": "^2.1.2",
        "config": "^3.3.10",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "dotenv": "^16.3.1",
        "express": "~4.17.3",
        "fs": "^0.0.1-security",
        "http-status-codes": "^2.1.4",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mocha": "^9.2.2",
        "module-alias": "^2.2.3",
        "mongodb": "^4.17.2",
        "mongoose": "^6.12.5",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.8",
        "nodemon": "^2.0.22",
        "office-document-properties": "^1.1.0",
        "prettier": "^2.8.8",
        "rimraf": "3.0.2",
        "reflect-metadata": "^0.1.14",
        "serve-favicon": "~2.5.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^4.6.3",
        "typedi": "^0.10.0",
        "zod": "^3.17.9"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "1.19.1",
        "@types/chai": "^4.3.11",
        "@types/config": "^0.0.41",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/lodash": "^4.14.202",
        "@types/morgan": "~1.9.9",
        "@types/node": "^16.18.71",
        "@types/node-uuid": "0.0.29",
        "@types/sinon": "^10.0.20",
        "@types/supertest": "^2.0.16",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "chai": "~4.3.10",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-deprecation": "^1.5.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-unicorn": "^35.0.0",
        "morgan": "^1.10.0",
        "nyc": "^15.1.0",
        "sinon": "^11.1.2",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^3.15.0",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=18.14.1"
      }
}
